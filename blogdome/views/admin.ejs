<%- include ./common/header %>
 
  <div class="container projects">
    <div class="row">
      <div class="" style="padding:100px 0;">
        <h3>文章发表</h3>
        <form method="POST" action="/admin/post" class="form-horizontal">
          <div class="form-group">
          	<input type="hidden" class="form-control" name="_id" value="<%=article._id%>">
            <label class="col-sm-2 control-label">题目</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="title" value="<%=article.title%>">
            </div>
          </div>
          <div class="form-group">
            <input type="hidden" class="form-control" name="_id" value="<%=article._id%>">
            <label class="col-sm-2 control-label">描述</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="describe" value="<%=article.describe%>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">作者</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="doctor" value="<%=article.doctor%>" >
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="year" value="<%=article.year%>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">海报</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="poster" value="<%=article.poster%>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">正文</label>
            <div class="col-sm-10">
              <textarea id="content" style="width: 100%;height: 500px;" name="summary" value=""><%=article.summary%></textarea>
              <input type="submit" class="btn btn-success" value="发表" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script>
      KindEditor.ready(function(K) {
       
        K.create('#content', {
          themeType : 'simple',
          filterMode : true
        });
      });
    </script>
<%- include ./common/footer %>
